            <div class="col-sm-10">
              <input type="number" class="form-control" id="MinCarrierPrice" placeholder="$0.20">
            </div>
          </div> --}}

            <div class="form-group row">
              <div class="col">
                <button type="submit" id="carrierSubmit" class="btn btn-primary btn-block">Submit</button>
              </div>
            </div>
        </form>
        <hr>
        <div class="card">
          <div class="card-header text-center">
            <h4>
              Available Routes
            </h4>
          </div>

          <div id="results"></div>

        </div>
      </div>
    </div>
  </div>
  </div>
  <script>
    $('#shipper a').on('click', function (e) {
      e.preventDefault()
      $(this).tab('show')
    });

    $('#carrier a').on('click', function (e) {
      e.preventDefault()
      $(this).tab('show')
    });
  </script>
</body>